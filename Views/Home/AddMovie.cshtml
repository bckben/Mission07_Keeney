@model Mission07_Keeney.Models.Movie

@{
    ViewData["Title"] = "Add a Movie";
}

<div class="container mt-4">
    <h2 class="text-center">Add a New Movie</h2>

    <form asp-action="AddMovie" method="post" class="border p-4 shadow-sm rounded bg-light">
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold"></label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label fw-bold"></label>
            <input asp-for="Year" class="form-control" type="number" min="1888" required />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Director" class="form-label fw-bold"></label>
            <input asp-for="Director" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label fw-bold"></label>
            <input asp-for="Rating" class="form-control" required />
        </div>

        <div class="mb-3">
            <label asp-for="Edited" class="form-label fw-bold"></label>
            <select asp-for="Edited" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="LentTo" class="form-label fw-bold"></label>
            <input asp-for="LentTo" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="CopiedToPlex" class="form-label fw-bold"></label>
            <select asp-for="CopiedToPlex" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label fw-bold"></label>
            <textarea asp-for="Notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>